#!/bin/bash
# ===========================================
# ðŸ‰ Simple Pterodactyl Wings Installer
# Author: Azim
# ===========================================

echo "ðŸš€ Installing Pterodactyl Wings (Simplified Setup)..."

# === Update & Install Requirements ===
apt update -y && apt upgrade -y
apt install -y curl docker.io docker-compose certbot -qq

# === Create directories ===
mkdir -p /etc/pterodactyl /var/lib/pterodactyl/volumes
cd /etc/pterodactyl

# === Download latest Wings binary ===
echo "â¬‡ï¸ Downloading latest Wings release..."
curl -L -o wings https://github.com/pterodactyl/wings/releases/latest/download/wings_linux_amd64
chmod +x wings

# === Ask for configuration ===
read -p "ðŸ› ï¸  Do you want to configure Wings now? (y/n): " configure_now

if [[ "$configure_now" =~ ^[Yy]$ ]]; then
  echo ""
  echo "âš™ï¸  Enter your Pterodactyl configuration details:"
  read -p "ðŸŒ Panel URL (e.g., https://panel.example.com): " PANEL_URL
  read -p "ðŸ§© Node UUID: " NODE_UUID
  read -p "ðŸ”‘ Token ID: " TOKEN_ID
  read -p "ðŸª™ Token: " TOKEN

  read -p "ðŸ”’ Enable SSL? (y/n): " ENABLE_SSL
  if [[ "$ENABLE_SSL" =~ ^[Yy]$ ]]; then
    read -p "ðŸ“„ SSL Cert Path: " SSL_CERT
    read -p "ðŸ”‘ SSL Key Path: " SSL_KEY
    SSL_ENABLED="true"
    API_PORT=443
  else
    SSL_ENABLED="false"
    SSL_CERT=""
    SSL_KEY=""
    API_PORT=8080
  fi

  # === Write configuration file ===
  echo "ðŸ“ Writing /etc/pterodactyl/config.yml..."
  cat > /etc/pterodactyl/config.yml <<EOF
debug: false
uuid: $NODE_UUID
token_id: $TOKEN_ID
token: $TOKEN
api:
  host: 0.0.0.0
  port: $API_PORT
  ssl:
    enabled: $SSL_ENABLED
    cert: $SSL_CERT
    key: $SSL_KEY
  upload_limit: 100
system:
  data: /var/lib/pterodactyl/volumes
  sftp:
    bind_port: 2022
allowed_mounts: []
remote: '$PANEL_URL'
EOF

else
  echo "âš™ï¸  Skipping configuration. Edit /etc/pterodactyl/config.yml manually later."
fi

# === Setup systemd service ===
echo "ðŸ§© Setting up systemd service..."
cat > /etc/systemd/system/wings.service <<'EOF'
[Unit]
Description=Pterodactyl Wings Daemon
After=docker.service
Requires=docker.service

[Service]
User=root
WorkingDirectory=/etc/pterodactyl
LimitNOFILE=4096
ExecStart=/etc/pterodactyl/wings
Restart=on-failure
StartLimitInterval=180
StartLimitBurst=30

[Install]
WantedBy=multi-user.target
EOF

# === Enable & start Wings ===
systemctl daemon-reload
systemctl enable wings
systemctl start wings

# === Done ===
echo ""
echo "âœ… Wings installation complete!"
echo "ðŸ§  To edit config: nano /etc/pterodactyl/config.yml"
echo "ðŸ” Restart Wings with: systemctl restart wings"
echo "ðŸ” Check status with: systemctl status wings --no-pager"
